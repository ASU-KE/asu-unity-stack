{
  "name": "asu_unity_stack",
  "version": "1.0.0",
  "description": "Reusable component-based Web Standards style kit for front end development.",
  "main": "src/core/core.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "build:dev": "webpack --config webpack.dev.js",
    "start": "npm-run-all --parallel watch:server watch:build",
    "watch:build": "webpack --config webpack.dev.js --watch",
    "watch:server": "nodemon --verbose server.js --exec babel-node"
  },
