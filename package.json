{
  "name": "asu_unity_stack",
  "version": "1.0.0",
  "description": "Reusable component-based Web Standards style kit for front end development.",
  "main": "src/core/core.js",
  "scripts": {
    "build": "webpack --config webpack/webpack.production.js",
    "build:watch": "webpack --watch --config=webpack/webpack.development.js",
    "build:dev": "webpack --config=webpack/webpack.development.js",
    "eslint": "eslint src/**/*.js src/**/components/*.jsx",
    "watch:components": "webpack --watch --config=webpack/webpack.components.js",
    "start": "babel-node server/server.js",
    "start:dev": "npm-run-all --parallel  build:watch server:watch",
    "start:devcomponents": "npm-run-all --parallel  watch:components server:watch",
    "server:watch": "nodemon server/server.js --exec babel-node",
    "test": "jest",
    "cosmos": "cosmos --config cosmos.config.js",
    "cosmos:build": "webpack --config=webpack/webpack.cosmos.js",
    "cosmos:export": "cosmos-export --config cosmos.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ASU/asu_unity_stack.git"
  },
  "author": "Colton Testamarck",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ASU/asu_unity_stack/issues"
  },
  "homepage": "https://github.com/ASU/asu_unity_stack#readme",
  "peerDependencies": {
    "react": ">=16.3.0",
    "react-dom": ">=16.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^8.0.4",
    "css-loader": "^0.28.11",
    "eslint": "^5.3.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-react": "^7.10.0",
    "express": "^4.16.3",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3",
    "mini-css-extract-plugin": "^0.4.0",
    "nodemon": "^1.17.4",
    "postcss": "^7.0.5",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.5",
    "postcss-nesting": "^5.0.0",
    "postcss-preset-env": "^5.3.0",
    "react": "^16.5.0",
    "react-cosmos": "^4.1.2",
    "react-cosmos-test": "^4.4.0",
    "react-dom": "^16.5.0",
    "react-test-renderer": "^16.3.2",
    "react-web-component": "^1.0.14",
    "style-loader": "^0.20.3",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "web-react-components": "^1.4.1",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "verbose": true,
    "automock": false,
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "roots": [
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "globals": {
      "__DEV__": true
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "no-unused-vars": "warn"
    },
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "version": "16.5"
      },
      "propWrapperFunctions": [
        "forbidExtraProps"
      ]
    }
  },
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
