{
  "name": "asu_unity_stack",
  "version": "1.0.0",
  "description": "Reusable component-based Web Standards style kit for front end development.",
  "main": "src/core/core.js",
  "scripts": {
    "build": "webpack --config webpack/webpack.production.js",
    "build:watch": "webpack --watch --config=webpack/webpack.development.js",
    "build:dev": "webpack --config=webpack/webpack.development.js",
    "eslint": "eslint src/**/*.js src/**/components/*.jsx",
    "watch:components": "webpack --watch --config=webpack/webpack.components.js",
    "start": "babel-node server/server.js",
    "start:dev": "npm-run-all --parallel  build:watch server:watch",
    "start:devcomponents": "npm-run-all --parallel  watch:components server:watch",
    "server:watch": "nodemon server/server.js --exec babel-node",
    "test": "jest",
    "storybook": "start-storybook",
    "build-storybook": "build-storybook -c .storybook -o export"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ASU/asu_unity_stack.git"
  },
  "author": "Colton Testamarck",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ASU/asu_unity_stack/issues"
  },
  "homepage": "https://github.com/ASU/asu_unity_stack#readme",
  "peerDependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-knobs": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@testing-library/react": "^8.0.9",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "css-loader": "^2.1.1",
    "eslint": "^5.3.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-react": "^7.14.3",
    "express": "^4.17.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "mini-css-extract-plugin": "^0.4.5",
    "nodemon": "^1.19.2",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^2.1.5",
    "postcss-modules": "^1.4.1",
    "postcss-preset-env": "^6.7.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-web-component": "^1.3.0",
    "regenerator-runtime": "^0.13.3",
    "searchkit": "^2.3.1-alpha.7",
    "style-loader": "^1.0.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "web-react-components": "^1.4.2",
    "webpack": "^4.40.0",
    "webpack-cli": "^3.3.8",
    "webpack-dev-middleware": "^3.7.1",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "verbose": true,
    "automock": false,
    "testURL": "http://localhost/",
    "setupFilesAfterEnv": [
      "@testing-library/react/cleanup-after-each"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "roots": [
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "globals": {
      "__DEV__": true
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "react"
    ],
    "rules": {
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "no-unused-vars": "warn",
      "no-console": "warn",
      "no-undef": "warn",
      "no-useless-escape": "off"
    },
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "version": "16.6"
      },
      "propWrapperFunctions": [
        "forbidExtraProps"
      ]
    }
  },
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
