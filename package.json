{
  "name": "root",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "prebuild": "yarn lint",
    "test": "lerna run test --stream --parallel",
    "test:e2e": "jest",
    "publish-packages": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "start": "node server/server.js",
    "stop": "node server/server.stop.js",
    "build-storybook": "storybook-to-aws-s3 --out=build --packages packages --bucket-path bucket/storybook --monorepo-index-generator server/storybook-index-generator.js --dry-run",
    "prepare": "husky install"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "verbose": true,
    "roots": [
      "tests"
    ],
    "setupFilesAfterEnv": [
      "@wordpress/jest-puppeteer-axe",
      "expect-puppeteer"
    ],
    "testTimeout": 30000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ASU/asu-unity-stack.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@commitlint/config-lerna-scopes": "^12.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.0.8",
    "semantic-release-monorepo": "^7.0.2",
    "start-server-and-test": "^1.9.1",
    "webpack": "^5.3.0",
    "webpack-cli": "^4.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {},
  "version": "0.0.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
